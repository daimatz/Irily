category:            Database
build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs:    src
  exposed-modules:   Database.Irily
  ghc-option:        -Wall -O2
  -- extensions:        OverloadedStrings
  build-depends:
                       base ==4.5.*
                     , containers
                     , mtl
                     , text

test-suite test
  type:              exitcode-stdio-1.0
  main-is:           Main.hs
  hs-source-dirs:    tests
  ghc-option:        -Wall -O2 -fno-warn-unused-do-bind
  extensions:        OverloadedStrings
  build-depends:
                       base ==4.5.*
                     , Irily
